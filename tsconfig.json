{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./",
    "lib": ["dom", "es5", "scripthost", "es2015", "es2016", "es2017"]
  },
  "include": [
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
